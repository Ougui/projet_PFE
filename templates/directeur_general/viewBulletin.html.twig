{% extends 'base.html.twig' %}
{% block title %}Mes bulletins{% endblock %}
{% block stylesheets %}
    <style>
        .color-99CC5B{background-color:#00008B;}
        .color-99CC5B:hover{background-color:#00008B; }
        body {
            background-image: url('{{asset('/images/back.png')}}');
            background-repeat: repeat;
            margin: 0;
            padding: 0;
            background-color: white;
            height: 100vh;
        }
    </style>
{% endblock %}
{% block body %}
    <h1 style="color:#40A497"><strong><i>Mes bulletins de paie</i></strong></h1>
    <br>
    <table class="table">
        <thead class="thead-light">
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Total heures supp</th>
            <th scope="col">Total heures abs</th>
            <th scope="col">IEP</th>
            <th scope="col">Alloc fam</th>
            <th scope="col">Prime panier</th>
            <th scope="col">Cotisations</th>
            <th scope="col">Impots</th>
            <th scope="col">Total</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for Bulletin in Bulletin %}
            <tr>
                <td>{{ Bulletin.date.format('Y-m-d')}}</td>
                <td>{{ Bulletin.TotalHeureSupp}} heures</td>
                <td>{{ Bulletin.TotalHeureAbs}} heures</td>
                <td>+{{ Bulletin.IEP|number_format(0,'.','.') }} DA</td>
                <td>+{{ Bulletin.allocationFamiliale|number_format(0,'.','.') }} DA</td>
                <td>+{{ Bulletin.panier|number_format(0,'.','.') }} DA</td>
                <td>-{{ Bulletin.cotisations|number_format(0,'.','.') }} DA</td>
                <td>-{{ Bulletin.impots|number_format(0,'.','.') }} DA</td>
                <td>{{ Bulletin.total|number_format(0,'.','.') }} DA</td>

                <td>
                    <a target="_blank" href="{{ path('dg_fiche_paie',{id_bulletin:Bulletin.id})}}" class="btn btn-dark color-99CC5B">Afficher</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('directeur_general')}}" class="btn btn-dark color-99CC5B">Retour</a>
{% endblock %}