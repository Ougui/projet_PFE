{% extends 'base.html.twig' %}

{% block title %}Historique de Presence{% endblock %}

{% block body %}
    <h1>Historique de pr√©sence</h1>
    <hr>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Heure d'arrivee</th>
            <th scope="col">Heure de sortie</th>
        </tr>
        </thead>
        <tbody>
        {% for Presence in Presence %}
            <tr>
                <td>{{ Presence.date.format('Y-m-d')}}</td>
                <td>{{ Presence.HeureIn.format('h:m')}}</td>
                <td>{{ Presence.HeureOut.format('h:m')}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('dg_lister_employe')}}" class="btn btn-dark">Retour</a>
{% endblock %}