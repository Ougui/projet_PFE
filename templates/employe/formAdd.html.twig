{% extends 'base.html.twig' %}
{% block title %}Ajouter un employé{% endblock %}
{% block stylesheets %}
    <style>
        .color-99CC5B{background-color:#00008B;}
        .color-99CC5B:hover{background-color:#00008B; }
        body {
            background-image: url('{{asset('/images/back.png')}}');
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            height: 100vh;
        }
        .row {
            margin-left: 40%;
            margin-right: auto;
            width:  500px;
        }
    </style>
{% endblock %}
{% block body %}

    <h1 style="color:#40A497"><strong><i>Ajouter un employé</i></strong></h1>
    <hr>
<div class="row">
 {{ form_start(formila) }}
    <div class="col-md-6">
        {{ form_row(formila.nom, { 'label': 'Nom' }) }}<br>
        {{ form_row(formila.prenom, { 'label': 'Prenom' }) }}<br>
        {{ form_row(formila.email, { 'label': 'Email' }) }}<br>
        {{ form_row(formila.password, { 'label': 'Mot de passe' }) }}<br>
        {{ form_row(formila.date_de_naissance, { 'label': 'Date de naissance' }) }}<br>
        {{ form_row(formila.lieu_de_naissance, { 'label': 'Lieu de naissance' }) }}<br>
        {{ form_row(formila.address, { 'label': 'Adresse' }) }}<br>
        {{ form_row(formila.numero, { 'label': 'Numero de telephone' }) }}<br>
        {{ form_row(formila.ccp, { 'label': 'Code CCP' }) }}<br>
        {{ form_row(formila.date_de_recrutement, { 'label': 'Date de recrutement' }) }}<br>
        {{ form_row(formila.nombre_des_enfants, { 'label': 'Nombre d\'enfants' }) }}<br>
        {{ form_row(formila.situation_familiale, { 'label': 'Situation familiale' }) }}<br>
        {{ form_row(formila.poste, { 'label': 'Poste de travail' }) }}<br>
        {{ form_row(formila.sexe, { 'label': 'Sexe'}) }}<br>
        {{ form_row(formila.Ajouter, { 'label': 'Ajouter' }) }}<br>
        <br>
        <a href="{{ path('rh_lister_employe') }}" class="btn btn-dark color-99CC5B">Retour</a>
        </div>
        {{ form_end(formila) }}
</div>
    <br>
{% endblock %}
