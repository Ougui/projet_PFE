{% extends 'base.html.twig' %}

{% block title %}Espace Personnel Directeur{% endblock %}

{% block body %}
    <h1>Bienvenue dans votre espace personnel, {{Employe.nom}} !</h1>
    <table border="1">
        <caption>Vos informations personnelles</caption>
        <tr>
            <th>ID         </th>
            <td>{{ Employe.id}}</td>
        <tr>
            <th>Nom</th>
            <td>{{ Employe.nom}}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ Employe.prenom}}</td>
        </tr>
        <tr>
            <th> Email</th>
            <th>    {{ Employe.email }}   </th>
        </tr>
        <tr>
            <th>Date de naissance</th>
            <td>{{ Employe.dateNaissance.format('Y-m-d')}}</td>
        </tr>
        <th>Lieu de naissance</th>
        <td>{{ Employe.lieuNaissance}}</td>
        <tr>
            <th>Sexe</th>
            <td>{{ Employe.sexe}}</td>
        </tr>
        <th>Adresse</th>
        <td>{{ Employe.adresse}}</td>
        <tr>

        </tr>
        <th>Numero de telephone</th>
        <td>{{ Employe.numeroTelephone}}</td>
        <tr>
            <th>Code CCP</th>
            <td>{{ Employe.ccp}}</td>
        </tr>
        <th>Situation Familiale</th>
        <td>{{ Employe.SituationFamiliale}}</td>
        <tr>
            <th>Nombre d'enfants</th>
            <td>{{ Employe.nombreEnfant}}</td>
        </tr>
        <th>Salaire de base</th>
        <td>{{ Employe.SalaireDeBase}}</td>
        <tr>
            <th>Filiale</th>
            <td>{{ Employe.filiale}}</td>
        </tr>
        <tr>
            <th>Poste</th>
            <td>{{ Employe.poste}}</td>
        </tr>
    </table>
    <a href="{{ path('comptable_view_bulletin',{id:Employe.id}) }}"class="btn btn-primary"> Mon Bulletin de paie </a>
    <br>
    <a href="{{ path('comptable_historique_presence',{id:Employe.id}) }}"class="btn btn-primary"> Mon historique de presence </a>
    <br>
    <a href="{{ path('comptable_lister_employe') }}"class="btn btn-primary">Afficher la liste des employés </a>
    <br>
    <a href="{{ path('calculPaie') }}" class="btn btn-primary">Lancer le calcul de la paie de ce mois</a>
    <br>
    <a href="{{ path('app_logout') }}"class="btn btn-primary"> Deconnexion </a>

{% endblock %}

