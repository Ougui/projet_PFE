{% extends 'base.html.twig' %}
{% block title %}Profil de {{ Employe.nom }}{% endblock %}
 {% block stylesheets %}
     <style>
         .center {
             margin-left: auto;
             margin-right: auto;
             width: auto;
         }
         body {
             margin: 0;
             padding: 0;
             background-color: white;
             height: 100vh;
         }
     </style>
 {% endblock %}
{% block body %}
    <h1> Profil de {{ Employe.nom}} {{ Employe.prenom}} </h1>
    <table  class=" table-bordered center" >
        <colgroup>
            <col span="1" style="background-color:#242B32">
        </colgroup>
        <colgroup>
            <col span="1" style="background-color:#242B32">
        </colgroup>
        <tr>
            <th style="color:whitesmoke" scope="col" >ID</th>
            <th scope="col"style="color:whitesmoke">{{ Employe.id}}</th>
        </tr>


        <tbody>
        <th style="color:whitesmoke">Nom </th>
        <th style="color:whitesmoke">{{ Employe.nom}}</th>
        </tr>
        <tr>
            <th style="color:whitesmoke">Pr√©nom</th>
            <th style="color:whitesmoke">{{ Employe.prenom}}</th>
        </tr>
        <tr>
            <th style="color:whitesmoke"> Email</th>
            <th style="color:whitesmoke">    {{ Employe.email }}   </th>
        </tr>
        <tr>
            <th style="color:whitesmoke">Date de naissance</th>
            <th style="color:whitesmoke">{{ Employe.dateNaissance.format('Y-m-d')}}</th>
        </tr>
        <th style="color:whitesmoke">Lieu de naissance</th>
        <th style="color:whitesmoke">{{ Employe.lieuNaissance}}</th>
        <tr>
            <th style="color:whitesmoke">Sexe</th>
            <th style="color:whitesmoke">{{ Employe.sexe}}</th>
        </tr>
        <th style="color:whitesmoke">Adresse</th>
        <th style="color:whitesmoke">{{ Employe.adresse}}</th>
        <tr>

        </tr>
        <th style="color:whitesmoke">Numero de telephone</th>
        <th style="color:whitesmoke">{{ Employe.numeroTelephone}}</th>
        <tr>
            <th style="color:whitesmoke">Code CCP</th>
            <th style="color:whitesmoke">{{ Employe.ccp}}</th>
        </tr>
        <th style="color:whitesmoke">Situation Familiale</th>
