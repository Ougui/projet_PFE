{% extends 'base.html.twig' %}
{% block title %}Profil de {{ Employe.nom }}{% endblock %}
 {% block stylesheets %}
     <style>
         .center {
             margin-left: auto;
             margin-right: auto;
             width: auto;
         }
         body {
             margin: 0;
             padding: 0;
             background-color: #e6e9f2;
             height: 100vh;
         }
     </style>
 {% endblock %}
