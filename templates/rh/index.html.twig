{% extends 'base.html.twig' %}

{% block title %}Espace Personnel RH{% endblock %}

{% block body %}
    <h1>Bienvenue dans votre espace personnel, {{Employe.nom}} !</h1>
    <table border="1">
        <caption>Vos informations personnelles</caption>
        <tr>
            <th>ID         </th>
            <td>{{ Employe.id}}</td>
        <tr>
            <th>Nom</th>
            <td>{{ Employe.nom}}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ Employe.prenom}}</td>
        </tr>
        <tr>
            <th> Email</th>
            <th>    {{ Employe.email }}   </th>
        </tr>
        <tr>
            <th>Date de naissance</th>
            <td>{{ Employe.dateNaissance.format('Y-m-d')}}</td>
        </tr>
        <th>Lieu de naissance</th>
        <td>{{ Employe.lieuNaissance}}</td>
        <tr>
            <th>Sexe</th>
            <td>{{ Employe.sexe}}</td>
        </tr>
        <th>Adresse</th>
        <td>{{ Employe.adresse}}</td>
        <tr>

        </tr>
        <th>Numero de telephone</th>
        <td>{{ Employe.numeroTelephone}}</td>
        <tr>
            <th>Code CCP</th>
            <td>{{ Employe.ccp}}</td>
        </tr>
        <th>Situation Familiale</th>
        <td>{{ Employe.SituationFamiliale}}</td>
        <tr>
            <th>Nombre d'enfants</th>
            <td>{{ Employe.nombreEnfant}}</td>
        </tr>
        <th>Salaire de base</th>
        <td>{{ Employe.SalaireDeBase}}</td>
        <tr>
            <th>Filiale</th>
            <td>{{ Employe.filiale}}</td>
        </tr>
        <tr>
            <th>Poste</th>
            <td>{{ Employe.poste}}</td>
        </tr>
    </table>
    <a href=""class="btn btn-primary"> Visualiser Bulletin de paie </a>
    <br>
    <a href=""class="btn btn-primary"> Visualiser historique de presence </a>
    <ul>
        <li>
            <a href="{{ path('rh_ajouter_employe') }}">Ajouter un employé</a>
        </li>
        <li>
            <a href="{{ path('rh_ajouter_poste') }}">Ajouter un Poste</a>
        </li>
        <li>
            <a href="{{ path('rh_lister_employe') }}">Afficher la liste des employés </a>
        </li>
    </ul>

{% endblock %}
