{% extends 'base.html.twig' %}
{% block body %}
    <h1>Liste des employ√©s</h1>
    <hr>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Poste</th>
            <th scope="col">Filiale</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for Employe in Employes %}
            <tr>
                <th scope="row">{{ Employe.id }}</th>
                <td>{{ Employe.email }}</td>
                <td>{{ Employe.nom }}</td>
                <td>{{ Employe.prenom }}</td>
                <td>{{ Employe.poste }}</td>
                <td>{{ Employe.filiale }}</td>
                <td>
                    <a href="{{ path('rh_profile_employe',{id:Employe.id})}}" class="btn btn-dark">Afficher</a>
                    <a href="{{ path('rh_modifier_employe',{id:Employe.id}) }}" class="btn btn-dark">Modifier</a>
                    <a href="{{ path('rh_supprimer_employe',{id:Employe.id}) }}" class="btn btn-dark">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('rh_ajouter_employe') }}" class="btn btn-dark">Ajouter</a>
    <br>
    <br>
    <a href="{{ path('rh')}}"class="btn btn-dark"> Retour </a>
{% endblock %}
