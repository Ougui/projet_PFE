{% extends 'base.html.twig' %}
{% block title %}Ajouter Poste!{% endblock %}
{% block stylesheets %}
    <style>
    body {
    margin: 0;
    padding: 0;
    background-color: #e6e9f2;
    height: 100vh;
    }
    .row {
    margin-left: 40%;
    margin-right: auto;
    width:  500px;
    }
    </style>
{% endblock %}
{% block body %}
    <h1>Ajouter un poste</h1>
    <hr>
    <br>
<div class="row">
    {{ form_start(formPost) }}
    <div class="col-md-6">
        {{ form_row(formPost.nom, { 'label': 'Nom du poste' }) }}<br>
        {{ form_row(formPost.salaire_de_base, { 'label': 'Salaire de base' }) }}<br>
        {{ form_row(formPost.Nombre_Jour_par_Semaine, { 'label': 'Nombre de jours par semaine' }) }}<br>
        {{ form_row(formPost.Nombre_Heure_par_jour, { 'label': 'Nombre d\'heures par jour' }) }}<br>
        {{ form_row(formPost.submit, { 'label': 'Submit' }) }}<br>
        <br>
        <a href="{{ path('rh_lister_poste')}}"class="btn btn-dark"> Retour </a>
    </div>
    {{ form_end(formPost) }}
</div>

{% endblock %}
