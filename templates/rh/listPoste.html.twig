{% extends 'base.html.twig' %}
{% block title %}Gestion des postes{% endblock %}
{% block stylesheets %}
    <style>
        .color-99CC5B{background-color:#00008B;}
        .color-99CC5B:hover{background-color:#00008B; }
        body {
            background-image: url('{{asset('/images/back.png')}}');
            background-repeat: repeat;
            margin: 0;
            padding: 0;
            background-color: white;
            height: 100vh;
        }
    </style>
{% endblock %}
{% block body %}
    <h1 style="color:#40A497"><strong><i>Liste des postes de travail</i></strong></h1>
    <br>
    <a style="margin-left: 80%" href="{{ path('rh_ajouter_poste')}}" class="btn btn-dark color-99CC5B">Ajouter</a>
    <br>
    <br>
        <table class="table">
        <thead class="thead-light">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Salaire de base</th>
            <th scope="col">Nombre de jours de travail par semaine</th>
            <th scope="col">Nombre d'heures de travail par jour</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
            <tbody>
        {% for Poste in Postes %}
            <tr>
                <th scope="row">{{ Poste.nom}}</th>
                <td>{{ Poste.SalaireDeBase}} DA</td>
                <td>{{ Poste.NbJourSemaine}} jours</td>
                <td>{{ Poste.NbHeureJour}} heures</td>
              <td><a href="{{ path('rh_modifier_poste',{id:Poste.id})}}" class="btn btn-dark color-99CC5B">Modifier</a>
                <a href="{{ path('rh_supprimer_poste',{id:Poste.id}) }}" class="btn btn-dark color-99CC5B">Supprimer</a></td>
            </tr>
        {% endfor %}
            </tbody>
    </table>
    <br>
    <a href="{{ path('rh')}}"class="btn btn-dark color-99CC5B"> Retour </a>
    <br>
    <br>
{% endblock %}
